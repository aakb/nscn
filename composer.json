{
    "name": "goalgorilla/social_template",
    "description": "Social project template for composer based Open Social projects.",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.6 || ^7.0",
        "composer/installers": "^1.0",
        "drupal-composer/drupal-scaffold": "2.4.0",
        "cweagans/composer-patches": "^1.0",
        "goalgorilla/open_social": "^3.2",
        "doctrine/cache": "1.6.1",
        "doctrine/collections": "1.4.0",
        "doctrine/common": "2.7.2",
        "doctrine/inflector": "1.1.0",
        "drupal/quick_node_clone": "^1.10",
        "drupal/rest_export_nested": "^1.0@alpha",
        "drupal/views_field_view": "^1.0@beta",
        "drupal/itk_siteimprove": "^1.0",
        "itk-dev/itk_azure_video": "^1.0.5"
    },


    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "composer",
            "url": "https://packagist.itkdev.dk"
        }
    ],
    "scripts": {
      "post-install-cmd": [
        "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
      ],
      "post-update-cmd": [
        "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
      ]
    },
    "extra": {
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "web/core": [
                "drupal/core"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/social": [
                "goalgorilla/open_social"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "enable-patching": true
    }
}
